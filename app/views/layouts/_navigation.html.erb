<div class="navbar">
  <div class="section-wrapper">

    <div class="brand"><%= link_to 'Alpha blog', root_path %></div>

    <ul class="menu main-navigation">
      <li class="menu__item"><%= link_to 'Articles', articles_path %></li>
      <li class="menu__item"><%= link_to 'About', about_path %></li>

      <% if logged_in? %>
        <li class="menu__item"><%= link_to 'Profile', user_path(current_user) %></li>
        <li class="menu__item"><%= link_to 'Log out', logout_path, method: :delete %></li>
      <% else %>
        <li class="menu__item"><%= link_to 'Log in', login_path %></li>
        <li class="menu__item"><%= link_to 'Sign up', signup_path %></li>
      <% end %>

    </ul>

  </div>
</div>