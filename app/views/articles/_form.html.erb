<% if @article.errors.any? %>
  <h4>The following erros prevented the article from getting saved:</h4>
  <ul>
  <% @article.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
  <% end %>
  </ul>
<% end %>


<%= form_for @article do |f| %>

<div class="eight columns offset-by-two">
  <p>
    <%= f.label :title %>
    <%= f.text_field :title, class: "u-full-width" %>
  </p>

  <p>
    <%= f.label :description %>
    <%= f.text_area :description, rows: 10, class: "u-full-width" %>
  </p>

  <p>
    <%= f.submit class: "button button-primary" %>
  </p>
</div>

<% end %>