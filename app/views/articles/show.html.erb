<div class="section-actions">
  <%= link_to 'Delete', article_path(@article),
    method: :delete,
    data: {confirm: "Are you sure you want to delete article '#{@article.title}'?"},
    class: "button button-danger" %>
  <%= link_to 'Edit', edit_article_path(@article), class: "button" %>
  <%= link_to 'Back to listing', articles_path, class: "button" %>
</div>

<div class="section-content">

  <article class="article">
    <h2 class="article__title"><%= @article.title %></h2>
    <p class="article__meta">
      <span class="article__author">by <%=link_to @article.user.username, user_path(@article.user) %></span>
      <span class="article__time">created <%= time_ago_in_words(@article.created_at) %> ago, last updated <%= time_ago_in_words(@article.updated_at) %> ago</span>
    </p>
    <p class="article__body"><%= @article.description %></p>
  </article>

</div>