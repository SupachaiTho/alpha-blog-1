<div class="section-actions twelve columns">
  <h2 class="section-title">Sign up</h2>
</div>

<%= render 'shared/errors', object: @user %>

<%= form_for @user do |f| %>

<div class="eight columns offset-by-two">
  <p>
    <%= f.label :username %>
    <%= f.text_field :username, class: "u-full-width" %>

    <%= f.label :email %>
    <%= f.email_field :email, class: "u-full-width" %>

    <%= f.label :password %>
    <%= f.password_field :password, class: "u-full-width" %>
  </p>

  <p>
    <%= f.submit "Sign up", class: "button button-primary" %>
  </p>
</div>

<% end %>